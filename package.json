{
    "name": "frontend2",
    "license": "UNLICENSED",
    "devDependencies": {
        "@fortawesome/fontawesome": "^1.1.3",
        "@fortawesome/fontawesome-free-solid": "^5.0.8",
        "@fortawesome/react-fontawesome": "^0.0.17",
        "@types/node": "^8.0.34",
        "amazon-cognito-identity-js": "^2.0.1",
        "autoprefixer": "^7.1.5",
        "babel-core": "^6.26.0",
        "babel-eslint": "^8.0.2",
        "babel-jest": "^21.2.0",
        "babel-loader": "^7.1.2",
        "babel-polyfill": "^6.26.0",
        "babel-preset-env": "^1.6.1",
        "babel-preset-preact": "^1.1.0",
        "babel-preset-stage-0": "^6.24.1",
        "clean-webpack-plugin": "^0.1.17",
        "compression-webpack-plugin": "^1.0.1",
        "copy-webpack-plugin": "^4.2.0",
        "css-loader": "^0.28.7",
        "cssnano": "^3.10.0",
        "eslint": "^4.18.2",
        "eslint-plugin-css-modules": "^2.7.5",
        "eslint-plugin-jest": "^21.3.2",
        "eslint-plugin-jsx-a11y": "^6.0.2",
        "eslint-plugin-react": "^7.4.0",
        "extract-text-webpack-plugin": "^3.0.1",
        "file-loader": "^1.1.5",
        "if-env": "^1.0.0",
        "jest": "21.2.0",
        "jest-css-modules": "^1.1.0",
        "postcss": "^6.0.13",
        "postcss-import": "^11.1.0",
        "postcss-loader": "^2.0.8",
        "preact": "^8.2.6",
        "preact-async-route": "^2.0.1",
        "preact-cli": "^1.4.1",
        "preact-compat": "^3.17.0",
        "preact-render-spy": "1.1.0",
        "preact-router": "^2.5.7",
        "precss": "^2.0.0",
        "react-redux": "^5.0.6",
        "redux": "^3.7.2",
        "sass-resources-loader": "^1.3.3",
        "style-loader": "^0.19.0",
        "stylelint": "^8.2.0",
        "uglifyjs-webpack-plugin": "^1.0.0-beta.3",
        "webpack": "^3.7.1",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "jest": {
        "automock": false,
        "verbose": true,
        "testURL": "http://localhost:9000",
        "transform": {
            "\\.(js|jsx)$": "./transformPreprocessor.js",
            "\\.(css|scss|sass)$": "./node_modules/jest-css-modules"
        },
        "moduleFileExtensions": [
            "js",
            "jsx",
            "css",
            "scss",
            "sass"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
            "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
            "^react$": "preact-compat",
            "^react-dom$": "preact-compat",
            "^create-react-class$": "preact-compat/lib/create-react-class",
            "^react-addons-css-transition-group$": "preact-css-transition-group"
        },
        "testEnvironment": "jsdom",
        "roots": [
            "src/js"
        ]
    },
    "scripts": {
        "test": "jest --no-cache",
        "lint": "yarn run lint:js && yarn run lint:css",
        "lint:js": "eslint src test",
        "lint:css": "stylelint src/**/*.css src/**/*.scss --syntax scss",
        "build:dev": "webpack",
        "build:acc": "yarn run lint && yarn run jest && NODE_ENV=production NEON_API_BASE_URL=${NEON_API_ACC_BASE_URL} COGNITO_USER_POOL_ID=${COGNITO_ACC_USER_POOL_ID} COGNITO_APP_CLIENT_ID=${COGNITO_ACC_APP_CLIENT_ID} webpack -p",
        "build:prod": "yarn run lint && yarn run jest && NODE_ENV=production NEON_API_BASE_URL=${NEON_API_PROD_BASE_URL} COGNITO_USER_POOL_ID=${COGNITO_PROD_USER_POOL_ID} COGNITO_APP_CLIENT_ID=${COGNITO_PROD_APP_CLIENT_ID} webpack -p"
    }
}
