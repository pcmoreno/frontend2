{
    "name": "customer-portal",
    "license": "UNLICENSED",
    "devDependencies": {
        "@babel/core": "^7.1.2",
        "@babel/plugin-syntax-dynamic-import": "^7.0.0",
        "@babel/plugin-transform-react-jsx": "^7.0.0",
        "@babel/preset-env": "^7.1.0",
        "@fortawesome/fontawesome-svg-core": "^1.2.4",
        "@fortawesome/free-regular-svg-icons": "^5.3.1",
        "@fortawesome/free-solid-svg-icons": "^5.3.1",
        "@fortawesome/react-fontawesome": "^0.1.3",
        "amazon-cognito-identity-js": "^2.0.30",
        "autoprefixer": "^9.1.5",
        "babel-eslint": "^10.0.1",
        "babel-jest": "^23.6.0",
        "babel-loader": "^8.0.4",
        "babel-preset-preact": "https://github.com/sjsikkema/babel-preset-preact.git#master",
        "clean-webpack-plugin": "^0.1.19",
        "compression-webpack-plugin": "^2.0.0",
        "copy-webpack-plugin": "^4.5.2",
        "css-loader": "^1.0.0",
        "cssnano": "^4.1.4",
        "eslint": "^5.6.1",
        "eslint-plugin-css-modules": "^2.9.1",
        "eslint-plugin-jest": "^21.24.1",
        "eslint-plugin-jsx-a11y": "^6.1.1",
        "eslint-plugin-react": "^7.11.1",
        "flatpickr": "^4.5.2",
        "hyphenation.en-gb": "^0.2.1",
        "hyphenation.nl": "^0.2.1",
        "hypher": "^0.2.5",
        "jest": "^23.6.0",
        "jest-css-modules": "^1.1.0",
        "mini-css-extract-plugin": "^0.4.3",
        "moment": "^2.22.2",
        "moment-timezone": "^0.5.21",
        "neon-frontend-utils": "git+ssh://git@psybizz.githost.io:neon/neon-frontend-utils.git#master",
        "postcss": "^7.0.5",
        "postcss-import": "^12.0.0",
        "postcss-loader": "^3.0.0",
        "preact": "^8.3.1",
        "preact-async-route": "^2.2.1",
        "preact-cli": "^2.2.1",
        "preact-compat": "^3.18.4",
        "preact-redux": "^2.0.3",
        "preact-render-spy": "^1.3.0",
        "preact-router": "^2.6.1",
        "precss": "^3.1.2",
        "react-froala-wysiwyg": "^2.8.5",
        "redux": "^4.0.0",
        "sass-resources-loader": "^1.3.3",
        "style-loader": "^0.23.0",
        "stylelint": "^9.6.0",
        "uglifyjs-webpack-plugin": "^2.0.1",
        "webpack": "^4.20.2",
        "webpack-cli": "^3.1.2",
        "webpack-visualizer-plugin": "^0.1.11"
    },
    "jest": {
        "automock": false,
        "verbose": true,
        "testURL": "http://localhost:9000",
        "transform": {
            "\\.(js|jsx)$": "./transformPreprocessor.js",
            "\\.(css|scss|sass)$": "./node_modules/jest-css-modules"
        },
        "moduleFileExtensions": [
            "js",
            "jsx",
            "css",
            "scss",
            "sass"
        ],
        "moduleDirectories": [
            "node_modules"
        ],
        "moduleNameMapper": {
            "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/tests/__mocks__/fileMock.js",
            "^preact$": "<rootDir>/node_modules/preact/dist/preact.min.js",
            "^react$": "preact-compat",
            "^react-dom$": "preact-compat",
            "^create-react-class$": "preact-compat/lib/create-react-class",
            "^react-addons-css-transition-group$": "preact-css-transition-group"
        },
        "testEnvironment": "jsdom",
        "roots": [
            "src/js"
        ]
    },
    "scripts": {
        "test": "jest --no-cache",
        "lint": "yarn run lint:js && yarn run lint:css",
        "lint:js": "eslint 'src'",
        "lint:css": "stylelint src/**/*.css src/**/*.scss --syntax scss",
        "build:dev": "webpack",
        "build:acc": "yarn run lint && yarn run jest && NODE_ENV=production FROALA_KEY=${FROALA_KEY} NEON_API_BASE_URL=${NEON_API_ACC_BASE_URL} COGNITO_USER_POOL_ID=${COGNITO_ACC_USER_POOL_ID} COGNITO_APP_CLIENT_ID=${COGNITO_ACC_APP_CLIENT_ID} webpack -p",
        "build:prod": "yarn run lint && yarn run jest && NODE_ENV=production FROALA_KEY=${FROALA_KEY} NEON_API_BASE_URL=${NEON_API_PROD_BASE_URL} COGNITO_USER_POOL_ID=${COGNITO_PROD_USER_POOL_ID} COGNITO_APP_CLIENT_ID=${COGNITO_PROD_APP_CLIENT_ID} webpack -p"
    },
    "dependencies": {
        "outdatedbrowser": "^1.1.5"
    }
}
